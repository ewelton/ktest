<$reveal type="nomatch" state="!!editing.dates" text="yes">
  <$button $setField="editing.dates" $setTo="yes" tag="div">
    <$action-setfield $field="editing.dates" $value="yes" />
    <$reveal type="match" state="!!date.ended" text="">
      <$reveal type="match" state="!!date.founded" text="">
          Click to provide Founding and Ending Dates
      </$reveal>
      <$reveal type="nomatch" state="!!date.founded" text="">
        Active since: {{!!date.founded}}
      </$reveal>
    </$reveal>
    <$reveal type="nomatch" state="!!date.ended" text="">
      <$reveal type="match" state="!!date.founded" text="">
        Ended, but missing founding information
      </$reveal>
      <$reveal type="nomatch" state="!!date.founded" text="">
        Active between: {{!!date.founded}} and {{!!date.ended}}
      </$reveal>
    </$reveal>
  </$button>
</$reveal>


\define taglist(tag)
<$select tiddler="$:/temp/state/welcome/$tag$" default="">
<option value="">Show All</option>
<$list filter="[tags:$tag$[]sort[title]!prefix[$]]" variable="dha">
<option><<dha>></option>
</$list>
</$select>

<$reveal type="match" state="$:/temp/state/welcome/$tag$" text="">
<$list filter="[tags:$tag$[]sort[title]!prefix[$]]" variable="dha">
<h3><$link to=<<dha>> ><<dha>></$link></h3>
<ul>
<$list filter="[<dha>listed[$tag$]sort[title]]">
<li><$link>{{!!title}}</$link></li>
</$list>
</ul>
</$list>
</$reveal>

<$reveal type="nomatch" state="$:/temp/state/welcome/$tag$" text="Show All">
<$set name="dha" tiddler="$:/temp/state/welcome/$tag$" >
<ul>
<$list filter="[<dha>listed[$tag$]sort[title]]">
<li><$link>{{!!title}}</$link></li>
</$list>
</ul>
</$set>
</$reveal>

\end
